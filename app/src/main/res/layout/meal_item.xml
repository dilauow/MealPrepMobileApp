<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="82dp"
        android:layout_height="85dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/meal"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/mealname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="156dp"
        android:fontFamily="@font/droid_sans_bold"
        android:text="Chicken Pizza"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/categoryVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:text="Chicken"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DrinkAltVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="3dp"
        android:text="Lime"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/areaVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="12dp"
        android:text="French"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/instructionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        android:text="Instructions"
        android:textColor="?attr/actionMenuTextColor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/instructionsVar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        android:text="Here we will put all the instructions" />

    <TextView
        android:id="@+id/tagsVar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:text="#Pizza"
        android:textColor="?attr/actionModeSplitBackground" />

    <TextView
        android:id="@+id/youtubeVar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="8dp"
        android:text="www.youtube.com"
        android:textColor="#FF1744" />

    <TextView
        android:id="@+id/ingMeasureVar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="4dp"
        android:text="Ingredients - Measures" />
</LinearLayout>